<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="seconds_visible"
        android:title="@string/show_seconds"
        />

    <SwitchPreference
        android:key="time_separator_blinking"
        android:title="@string/blink_time_separator"
        />

    <SwitchPreference
        android:key="24_hours_format"
        android:title="@string/use_24_hours_format"
        />

<!-- android:entries are build in code! -->
    <ListPreference
        android:key="date_format"
        android:title="@string/date_format"
        android:entryValues="@array/date_format_values"
        />

    <EditTextPreference
        android:key="time_separator"
        android:title="@string/time_separator"
        />

    <EditTextPreference
        android:key="seconds_separator"
        android:title="@string/seconds_separator"
        />

</PreferenceScreen>
