<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/clockBackgroundColor"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hours_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/timeFont"
                android:text="21"
                android:textColor="?attr/timeTextColor"
                android:textSize="?attr/hoursFontSize"
                android:includeFontPadding="false"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/time_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/timeFont"
                android:textColor="?attr/timeTextColor"
                android:textSize="?attr/hoursFontSize"
                android:includeFontPadding="false"
                android:text=":"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/minutes_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/timeFont"
                android:text="56"
                android:textColor="?attr/timeTextColor"
                android:textSize="?attr/hoursFontSize"
                android:includeFontPadding="false"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/am_pm_marker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="?attr/timeFont"
                    android:includeFontPadding="false"
                    android:text="AM"
                    android:textAlignment="center"
                    android:textColor="?attr/timeTextColor"
                    android:textSize="?attr/amPmFontSize"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seconds_separator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="?attr/timeFont"
                        android:includeFontPadding="false"
                        android:text=":"
                        android:textColor="?attr/timeTextColor"
                        android:textSize="?attr/secondsFontSize"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/seconds_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="?attr/timeFont"
                        android:includeFontPadding="false"
                        android:text="04"
                        android:textColor="?attr/timeTextColor"
                        android:textSize="?attr/secondsFontSize"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="?attr/timeFont"
            android:includeFontPadding="false"
            android:text="Wednesday, January 13 "
            android:textAlignment="center"
            android:textColor="?attr/timeTextColor"
            android:textSize="?attr/dateFontSize"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin_top"
        android:contentDescription="@string/settings_button"
        app:srcCompat="@drawable/ic_baseline_menu" />

</RelativeLayout>