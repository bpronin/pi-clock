<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:animateLayoutChanges="true"
    android:background="?attr/contentBackgroundColor">

    <ImageView
        android:id="@+id/clock_face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="?attr/contentClockFaceShape"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/hour_hand_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="30"
        android:src="?attr/contentClockHandShapeHour"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/minute_hand_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="180"
        android:src="?attr/contentClockHandShapeMinute"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/second_hand_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="240"
        android:src="?attr/contentClockHandShapeSecond"
        tools:ignore="ContentDescription" />

</FrameLayout>
