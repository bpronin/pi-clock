<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="?attr/contentBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-20sp"
        android:orientation="horizontal">

        <com.bopr.piclock.AnimatedTextView
            android:id="@+id/hours_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:includeFontPadding="false"
            android:text="00"
            android:textColor="?attr/contentTextColor"
            android:textSize="96sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/time_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8sp"
            android:layout_marginEnd="2sp"
            android:fontFamily="@font/kanit"
            android:includeFontPadding="false"
            android:text=":"
            android:textColor="?attr/contentTextColor"
            android:textSize="96sp"
            tools:ignore="HardcodedText" />

        <com.bopr.piclock.AnimatedTextView
            android:id="@+id/minutes_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:includeFontPadding="false"
            android:text="00"
            android:textColor="?attr/contentTextColor"
            android:textSize="96sp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/am_pm_marker_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32sp"
                android:layout_marginBottom="-32sp"
                android:fontFamily="@font/kanit"
                android:gravity="top|center_horizontal"
                android:includeFontPadding="false"
                android:text="AM"
                android:textColor="?attr/contentTextColor"
                android:textSize="34sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-20sp"
                android:layout_marginBottom="20sp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seconds_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4sp"
                    android:layout_marginBottom="4sp"
                    android:layout_marginStart="4sp"
                    android:layout_marginEnd="4sp"
                    android:fontFamily="@font/kanit"
                    android:includeFontPadding="false"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="?attr/contentTextColor"
                    android:textSize="42sp"
                    tools:ignore="HardcodedText" />

                <com.bopr.piclock.AnimatedTextView
                    android:id="@+id/seconds_view"
                    android:layout_width="68sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit"
                    android:includeFontPadding="false"
                    android:text="20"
                    android:textColor="?attr/contentTextColor"
                    android:textSize="42sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.bopr.piclock.AnimatedTextView
        android:id="@+id/date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:includeFontPadding="false"
        android:text="Someday, Month 00 "
        android:textAlignment="center"
        android:textColor="?attr/contentTextColor"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

</LinearLayout>