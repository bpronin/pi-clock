<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/clockBackgroundColor"
    android:keepScreenOn="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/time_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/timeFont"
        android:textColor="?attr/timeTextColor"
        android:textSize="?attr/hoursFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text=":"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/hours_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/timeFont"
        android:textColor="?attr/timeTextColor"
        android:textSize="?attr/hoursFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/time_separator"
        app:layout_constraintTop_toTopOf="parent"
        android:text="00"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/minutes_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/timeFont"
        android:textColor="?attr/timeTextColor"
        android:textSize="?attr/hoursFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/time_separator"
        app:layout_constraintTop_toTopOf="parent"
        android:text="00"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/seconds_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/timeFont"
        android:textColor="?attr/timeTextColor"
        android:textSize="?attr/secondsFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/minutes_view"
        app:layout_constraintTop_toTopOf="parent"
        android:text=":"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/seconds_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/timeFont"
        android:textColor="?attr/timeTextColor"
        android:textSize="?attr/secondsFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/seconds_separator"
        app:layout_constraintTop_toTopOf="parent"
        android:text="00"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/timeFont"
        android:textColor="?attr/timeTextColor"
        android:textSize="?attr/dateFontSize"
        app:layout_constraintEnd_toStartOf="@+id/seconds_separator"
        app:layout_constraintLeft_toRightOf="@id/seconds_separator"
        app:layout_constraintStart_toStartOf="@+id/hours_view"
        app:layout_constraintTop_toBottomOf="@+id/time_separator"
        android:text="Wednesday, April 13"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>