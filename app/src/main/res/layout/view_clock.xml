<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/clockBackgroundColor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hours_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="?attr/timeFont"
            android:text="21"
            android:textColor="?attr/timeTextColor"
            android:textSize="?attr/hoursFontSize"
            android:includeFontPadding="false"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/time_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="?attr/timeFont"
            android:textColor="?attr/timeTextColor"
            android:textSize="?attr/hoursFontSize"
            android:includeFontPadding="false"
            android:layout_marginTop="-8sp"
            android:text=":"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/minutes_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="?attr/timeFont"
            android:text="56"
            android:textColor="?attr/timeTextColor"
            android:textSize="?attr/hoursFontSize"
            android:includeFontPadding="false"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/am_pm_marker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:fontFamily="?attr/timeFont"
                android:includeFontPadding="false"
                android:text="AM"
                android:textAlignment="center"
                android:textColor="?attr/timeTextColor"
                android:textSize="?attr/amPmFontSize"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8sp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seconds_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="?attr/timeFont"
                    android:includeFontPadding="false"
                    android:text=":"
                    android:layout_marginTop="-4sp"
                    android:textAlignment="center"
                    android:textColor="?attr/timeTextColor"
                    android:textSize="?attr/secondsFontSize"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/seconds_view"
                    android:layout_width="58sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="?attr/timeFont"
                    android:includeFontPadding="false"
                    android:text="04"
                    android:textColor="?attr/timeTextColor"
                    android:textSize="?attr/secondsFontSize"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="?attr/timeFont"
        android:includeFontPadding="false"
        android:text="Wednesday, January 13 "
        android:textAlignment="center"
        android:textColor="?attr/timeTextColor"
        android:textSize="?attr/dateFontSize"
        tools:ignore="HardcodedText" />

</LinearLayout>