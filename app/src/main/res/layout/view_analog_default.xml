<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="?attr/contentBackgroundColor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/clock_face"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/view_analog_default_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/hour_hand_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/view_analog_default_hour_hand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/minute_hand_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/view_analog_default_minute_hand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/second_hand_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/view_analog_default_second_hand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <com.bopr.piclock.AnimatedTextView
        android:id="@+id/date_view"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="Someday of the week, Month 00, 2021"
        android:textColor="?attr/contentTextColor"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/clock_face"
        app:layout_constraintRight_toRightOf="@id/clock_face"
        app:layout_constraintTop_toBottomOf="@id/clock_face"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>